<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ambientpreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/preview"
                android:visibility="visible" />

            <Switch
                android:id="@+id/top_ambient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ambientpreview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:onClick="buttonTop" />

            <Switch
                android:id="@+id/bot_large_ambient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ambientpreview"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:onClick="buttonBottom" />

            <Switch
                android:id="@+id/bot_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/bot_large_ambient"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:onClick="buttonMiddle" />

            <Switch
                android:id="@+id/bot_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/bot_large_ambient"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/bot_middle"
                android:onClick="buttonLeft" />

            <Switch
                android:id="@+id/bot_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/bot_large_ambient"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/bot_middle"
                android:onClick="buttonRight" />

        </RelativeLayout>

        <Switch
            android:id="@+id/background_ambient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="background"
            android:text="@string/background" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    </LinearLayout>
</ScrollView>